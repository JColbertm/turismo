<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- The main content view -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/volvan1">

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="310dp"
                android:layout_gravity="center"
                android:id="@+id/ss"
                android:background="@android:color/transparent"
                android:layout_margin="15dp"
                android:paddingStart="0dp"
                android:paddingTop="0dp">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/im1"
                    android:layout_marginStart="41dp"
                    android:background="@drawable/elis1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/im2"
                    android:layout_toStartOf="@+id/im2"
                    android:layout_marginTop="23dp" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/im2"
                    android:background="@drawable/hospital1"
                    android:layout_alignTop="@+id/im1"
                    android:layout_centerHorizontal="true" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/im3"
                    android:background="@drawable/hotel1"
                    android:layout_alignTop="@+id/im2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="44dp"
                    android:layout_marginEnd="44dp" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/im4"
                    android:background="@drawable/iglesia1"
                    android:layout_below="@+id/im1"
                    android:layout_alignLeft="@+id/im1"
                    android:layout_alignStart="@+id/im1"
                    android:layout_marginTop="0dp" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/im5"
                    android:background="@drawable/parques1"
                    android:layout_alignTop="@+id/im4"
                    android:layout_alignLeft="@+id/im2"
                    android:layout_alignStart="@+id/im2" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/im6"
                    android:background="@drawable/plaza1"
                    android:layout_alignTop="@+id/im5"
                    android:layout_alignLeft="@+id/im3"
                    android:layout_alignStart="@+id/im3" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/im7"
                    android:background="@drawable/puma1"
                    android:layout_below="@+id/im4"
                    android:layout_alignLeft="@+id/im4"
                    android:layout_alignStart="@+id/im4"
                    android:layout_marginTop="0dp" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/im8"
                    android:background="@drawable/teleferico1"
                    android:layout_alignTop="@+id/im7"
                    android:layout_alignLeft="@+id/im5"
                    android:layout_alignStart="@+id/im5" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/im9"
                    android:background="@drawable/zoo1"
                    android:layout_alignTop="@+id/im8"
                    android:layout_alignLeft="@+id/im6"
                    android:layout_alignStart="@+id/im6" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Menu Principal"
                android:id="@+id/menunom"
                android:layout_gravity="center_horizontal|top"
                android:textSize="43dp"
                android:paddingTop="30dp"
                android:textColor="@android:color/white" />

            <SearchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="right|top" />

        </FrameLayout>
        <!-- The navigation drawer -->
        <ListView android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="@android:color/white"/>
    </android.support.v4.widget.DrawerLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView2"
        android:layout_gravity="right" />


</LinearLayout>

