<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/principal"
    android:background="@drawable/lp1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="BIENVENIDO!!"
        android:id="@+id/fuente"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="76dp"
        android:layout_height="35dp"
        android:text="Login"
        android:id="@+id/login"
        android:layout_gravity="left|bottom"
        android:background="@android:color/background_light"
        android:textColor="@android:color/black"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/registrar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="76dp"
        android:layout_height="35dp"
        android:text="registrar"
        android:id="@+id/registrar"
        android:layout_gravity="left|bottom"
        android:background="@android:color/background_light"
        android:textColor="@android:color/black"
        android:layout_marginBottom="110dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user"
        android:background="@android:color/white"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/fuente"
        android:layout_alignRight="@+id/login"
        android:layout_alignEnd="@+id/login"
        android:layout_toRightOf="@+id/usuario"
        android:layout_toEndOf="@+id/usuario"
        android:padding="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pas"
        android:autoText="false"
        android:background="@android:color/white"
        android:layout_below="@+id/user"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@+id/passw"
        android:layout_alignRight="@+id/user"
        android:layout_alignEnd="@+id/user"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Usuario:       "
        android:id="@+id/usuario"
        android:layout_above="@+id/pas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password:   "
        android:id="@+id/passw"
        android:layout_alignBottom="@+id/pas"
        android:layout_alignLeft="@+id/usuario"
        android:layout_alignStart="@+id/usuario"
        android:textColor="@android:color/white" />


</RelativeLayout>
